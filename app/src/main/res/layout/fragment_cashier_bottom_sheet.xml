<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_r20_half"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close_button"
        app:tint="@color/grey_400" />


    <TextView
        style="@style/ToolbarTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="start"
        android:text="@string/add_cashier"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cashierPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_r12"
        android:digits="0123456789+"
        android:gravity="center_vertical"
        android:hint="Телефон"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cashierNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_r12"
        android:gravity="center_vertical"
        android:hint="Имя"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:padding="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/cashier_subinfo_title"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/chooseYourselfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_r12_ripple"
        android:gravity="center_vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp"
        android:text="@string/set_yourself_cashier"
        android:textColor="@color/orange_700" />

    <Button
        android:id="@+id/chooseButton"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="84dp"
        android:text="@string/add_cashier" />


</LinearLayout>